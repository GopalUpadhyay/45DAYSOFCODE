#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	while(T--){
	    int N, temp1=0,temp2=0;
	    cin>>N;
	    temp1 = N/3;
	    temp2 = N%3;
	    if(temp2 == 0){
	        cout<<temp1-1<<" "<<temp1+2<<" "<<temp1-1<<endl;
	       
	    }
	    else{
	      cout<<temp1<<" "<<temp1+temp2<<" "<<temp1<<endl;
	      
	    }
	}
	return 0;
}
