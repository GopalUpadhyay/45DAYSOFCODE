#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	while(T--){
	    int n, count=0;
	    cin>>n;
	    
	    int temp=n;
	    while(temp!=0){
	        if(temp%10 == 4){
	            count++;
	        }
	        temp = temp/10;
	    }
	    cout<<count<<endl;
	}
	return 0;
}
