#include<iostream>

using namespace std;



void Roundof(int l,int v1,int v2){

    int t1,t2;

    t1 = l % v1;

    t2 = l % v2;



    if(t1 != 0){

        t1 = (l/v1) + 1;

    }

    else

        t1 = (l/v1);



    if(t2 != 0){

        t2 = (l/v2) + 1;

    }

    else

        t2 = (l/v2) ;



    if(t1 >= t2 +1){

        cout<<t1-(t2+1)<<endl;

    }

    else

        cout<<-1<<endl;

}





int main(){

    int t,l,v1,v2,T1;

    

    cin>>t;

    while(t--){

        cin>>l;

        cin>>v1;

        cin>>v2;

        Roundof(l,v1,v2);

    }

    return 0;

}
